{
    "name": "search-tailor",
    "version": "1.0.0",
    "description": "A browser extension for tailoring your search results.",
    "author": "Nick Brombal",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "build:manifest": "cp src/manifest.json dist/",
        "watch:manifest": "chokidar \"src/manifest.json\" -c \"npm run build:manifest\" --initial",
        "build:html": "pug src/markup --out dist/markup",
        "watch:html": "chokidar \"src/markup/*.pug\" -c \"pug {path} --out dist/markup\" --initial",
        "build:css": "sass --update src/styles:dist/styles --style compressed",
        "watch:css": "sass --watch src/styles:dist/styles --style compressed",
        "lint:js": "eslint src/scripts/*.js; exit 0",
        "bundle:js:addon": "browserify src/scripts/addon.js > dist/scripts/addon.js",
        "bundle:js:popup": "browserify src/scripts/popup.js > dist/scripts/popup.js",
        "bundle:js:options": "browserify src/scripts/options.js > dist/scripts/options.js",
        "build:js": "run-s lint:js bundle:js",
        "bundle:js": "run-p bundle:js:*",
        "watch:js": "chokidar \"src/scripts/*.js\" -c \"npm run build:js\" --initial",
        "build:assets": "cp -r src/assets dist",
        "watch:assets": "chokidar \"src/assets\" -c \"npm run build:assets\" --initial",
        "clean": "rimraf dist && mkdir -p dist/{assets,markup,scripts,styles}",
        "build": "run-s clean build:*",
        "watch": "npm-run-all build -p watch:*",
        "reinstall": "rimraf node_modules && npm cache verify && npm install"
    },
    "browserify": {
        "transform": [
            "babelify"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,json,scss}": [
            "prettier --write",
            "git add"
        ],
        "ignore": [
            "**/*.min.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true
        },
        "plugins": [
            "import"
        ],
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "globals": {
            "browser": "readonly"
        },
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "rules": {
            "no-console": [
                "warn",
                {
                    "allow": [
                        "error"
                    ]
                }
            ]
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.7",
        "@babel/preset-env": "^7.8.7",
        "babelify": "^10.0.0",
        "browserify": "^16.5.0",
        "chokidar-cli": "^1.2.3",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-base": "^13.2.0",
        "eslint-config-prettier": "^4.3.0",
        "eslint-plugin-import": "^2.20.1",
        "husky": "^1.3.1",
        "lint-staged": "^8.2.1",
        "npm-run-all": "^4.1.5",
        "prettier": "1.16.4",
        "pug-cli": "^1.0.0-alpha6",
        "rimraf": "^2.7.1",
        "sass": "^1.26.2"
    },
    "dependencies": {
        "sortablejs": "^1.10.2"
    }
}
