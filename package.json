{
    "name": "search-tailor",
    "version": "1.0.0",
    "description": "A browser extension for tailoring your search results.",
    "main": "index.js",
    "scripts": {
        "build:manifest": "cp src/manifest.json dist/",
        "watch:manifest": "chokidar \"src/manifest.json\" -c \"npm run build:manifest\" --initial",
        "build:html": "npx pug src/markup --out dist/markup",
        "watch:html": "chokidar \"src/markup/*.pug\" -c \"npx pug {path} --out dist/markup\" --initial",
        "build:css": "sass --update src/styles:dist/styles --style compressed",
        "watch:css": "sass --watch src/styles:dist/styles --style compressed",
        "build:js": "npx babel src/scripts --out-dir dist/scripts --source-maps",
        "watch:js": "npx babel --watch src/scripts --out-dir dist/scripts --source-maps",
        "build:assets": "cp -r src/assets dist",
        "watch:assets": "chokidar \"src/assets\" -c \"npm run build:assets\"  --initial",
        "clean": "rimraf dist && mkdir dist",
        "build": "npm run clean && npm-run-all --sequential build:*",
        "watch": "npm run build && npm-run-all --parallel watch:*",
        "reinstall": "rimraf node_modules && npm cache verify && npm install"
    },
    "author": "Nick Brombal",
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.4.0",
        "@babel/preset-env": "^7.4.2",
        "chokidar-cli": "^1.2.2",
        "npm-run-all": "^4.1.5",
        "pug-cli": "^1.0.0-alpha6",
        "rimraf": "^2.6.3",
        "sass": "^1.17.3"
    }
}
