{
    "name": "search-tailor",
    "version": "1.0.0",
    "description": "A browser extension for tailoring your search results.",
    "author": "Nick Brombal",
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "build:manifest": "cp src/manifest.json dist/",
        "watch:manifest": "chokidar \"src/manifest.json\" -c \"npm run build:manifest\" --initial",
        "build:html": "npx pug src/markup --out dist/markup",
        "watch:html": "chokidar \"src/markup/*.pug\" -c \"npx pug {path} --out dist/markup\" --initial",
        "build:css": "sass --update src/styles:dist/styles --style compressed",
        "watch:css": "sass --watch src/styles:dist/styles --style compressed",
        "lint:js": "npx eslint src/scripts/*.js; exit 0",
        "build:js": "npm run lint:js && npx babel src/scripts --out-dir dist/scripts --source-maps",
        "watch:js": "chokidar \"src/scripts/*.js\" -c \"npm run build:js\" --initial",
        "build:assets": "cp -r src/assets dist",
        "watch:assets": "chokidar \"src/assets\" -c \"npm run build:assets\"  --initial",
        "clean": "rimraf dist && mkdir dist",
        "build": "npm run clean && npm-run-all --sequential build:*",
        "watch": "npm run build && npm-run-all --parallel watch:*",
        "reinstall": "rimraf node_modules && npm cache verify && npm install",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "*.{js,json,scss}": [
            "prettier --write",
            "git add"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true
        },
        "plugins": [
            "import"
        ],
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "globals": {
            "browser": "readonly"
        },
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module"
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.4.0",
        "@babel/preset-env": "^7.4.2",
        "chokidar-cli": "^1.2.2",
        "eslint": "^5.15.3",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-plugin-import": "^2.16.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.5",
        "npm-run-all": "^4.1.5",
        "prettier": "1.16.4",
        "pug-cli": "^1.0.0-alpha6",
        "rimraf": "^2.6.3",
        "sass": "^1.17.3"
    }
}
