doctype html

html
    head
        meta(charset="utf-8")
        link(rel="stylesheet" href="../styles/popup.css")

        style(type='text/css').
            body {
                height: 420px;
                min-width: 374px;
            }

    body
        include includes/tailoring-entry

        main(id="popup-content")
            div(class="title-bar js-title-bar")
                div(class="title-bar__logo js-title-logo" data-tippy-html)
                    img(src="../assets/icons/icon.svg" alt="Search tailor logo")
                    div(class="tooltip-contents js-tooltip-contents" data-tippy-contents)
                        div(class="tooltip-contents__section js-logo-tooltip-version" data-label="Version")
                        div(class="tooltip-contents__section js-logo-tooltip-tidbit" data-label="Random Tidbit")

                div(class="title-bar__action-container")
                    a(class="title-bar__action" href=links.documentation target="_blank" aria-label="View the documentation" data-tippy)
                        svg(class="title-bar__action__icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24")
                            path(d="M11 18h2v-2h-2v2zm1-16C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm0-14c-2.21 0-4 1.79-4 4h2c0-1.1.9-2 2-2s2 .9 2 2c0 2-3 1.75-3 5h2c0-2.25 3-2.5 3-5 0-2.21-1.79-4-4-4z")

                    a(class="title-bar__action" href=links.issues target="_blank" aria-label="Report an issue" data-tippy)
                        svg(class="title-bar__action__icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24")
                            path(d="M20 8h-2.81c-.45-.78-1.07-1.45-1.82-1.96L17 4.41 15.59 3l-2.17 2.17C12.96 5.06 12.49 5 12 5c-.49 0-.96.06-1.41.17L8.41 3 7 4.41l1.62 1.63C7.88 6.55 7.26 7.22 6.81 8H4v2h2.09c-.05.33-.09.66-.09 1v1H4v2h2v1c0 .34.04.67.09 1H4v2h2.81c1.04 1.79 2.97 3 5.19 3s4.15-1.21 5.19-3H20v-2h-2.09c.05-.33.09-.66.09-1v-1h2v-2h-2v-1c0-.34-.04-.67-.09-1H20V8zm-6 8h-4v-2h4v2zm0-4h-4v-2h4v2z")

                    a(class="title-bar__action" href=links.review target="_blank" aria-label="Rate your experience" data-tippy disabled)
                        svg(class="title-bar__action__icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24")
                            path(d="M22,9.24l-7.19-0.62L12,2L9.19,8.63L2,9.24l5.46,4.73L5.82,21L12,17.27L18.18,21l-1.63-7.03L22,9.24z M12,15.4V6.1 l1.71,4.04l4.38,0.38l-3.32,2.88l1,4.28L12,15.4z")

                    a(class="title-bar__action" href=links.support.koFi target="_blank" aria-label="Support the developer" data-tippy)
                        svg(class="title-bar__action__icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24")
                            path(d="M20,3H9v2.4l1.81,1.45C10.93,6.94,11,7.09,11,7.24v4.26c0,0.28-0.22,0.5-0.5,0.5h-4C6.22,12,6,11.78,6,11.5V7.24 c0-0.15,0.07-0.3,0.19-0.39L8,5.4V3H4v10c0,2.21,1.79,4,4,4h6c2.21,0,4-1.79,4-4v-3h2c1.11,0,2-0.9,2-2V5C22,3.89,21.11,3,20,3z M20,8h-2V5h2V8z")
                            rect(height="2" width="16" x="4" y="19")

                    button(class="title-bar__action" data-click-action="openOptionsPage" aria-label="Open options page" data-tippy)
                        svg(class="title-bar__action__icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24")
                            path(d="M3 17v2h6v-2H3zM3 5v2h10V5H3zm10 16v-2h8v-2h-8v-2h-2v6h2zM7 9v2H3v2h4v2h2V9H7zm14 4v-2H11v2h10zm-6-4h2V7h4V5h-4V3h-2v6z")

            div(class="entry-container js-entry-container")

            div(class="action-bar js-action-bar")
                button(class="action-bar__action" data-click-action="addEntry")
                    svg(class="action-bar__action__icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24")
                        path(d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z")
                        path(d="M0 0h24v24H0z" fill="none")
                    span(class="action-bar__action__label") Add New

        script(src="../scripts/popup.js")