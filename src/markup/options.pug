doctype html

html
    head
        meta(charset="utf-8")
        link(rel="stylesheet" href="../styles/options.css")

    body
        main(id="search-tailor-options-panel")

            div(class="search-tailor-option")
                span(class="search-tailor-option__label") Tailoring Templates
                div(class="search-tailor-option__input-wrapper")
                    ul(class="tailoring-template-list" id="search-tailor-tailoring-templates")
                        template#tailoring-template
                            li(class="tailoring-template js-tailoring-template")
                                input(class="tailoring-template__id-input js-template-id-input" type="text" hidden readonly)
                                input(class="tailoring-template__label-input js-template-label-input" type="text" placeholder="template label")
                                input(class="tailoring-template__background-color-input js-template-background-color-input" type="color")
                                input(class="tailoring-template__background-opacity-input js-template-background-opacity-input" type="range" min="0" max="1" step=".01" value="1")
                                input(class="tailoring-template__border-color-input js-template-border-color-input" type="color")
                                input(class="tailoring-template__border-opacity-input js-template-border-opacity-input" type="range" min="0" max="1" step=".01" value="1")

                                div(class="tailoring-template__actions")
                                    button(class="tailoring-template__action" data-click-action="deleteTemplate") Delete

                div(class="search-tailor-option__action-container")
                    button(class="search-tailor-option__action" data-click-action="addTemplate") Add New

            -
                var searchEngines = [
                    { name: "Bing", id: "bing" },
                    { name: "DuckDuckGo", id: "duckduckgo" },
                    { name: "Google", id: "google" },
                    { name: "Yahoo!", id: "yahoo" },
                ];

            div(class="search-tailor-option")
                span(class="search-tailor-option__label") Search Engines
                    mixin searchEngineToggle(searchEngine)
                        label(
                            class=[
                                `search-tailor-option__input-wrapper`,
                                `search-tailor-option__input-wrapper--toggle`,
                            ]
                        )
                            input(
                                id=searchEngine.id
                                class=[
                                    `search-tailor-option__input`,
                                    `search-tailor-option__input--toggle`,
                                    `js-option-input`,
                                ]
                                type="checkbox"
                                name=searchEngine.name
                                data-input-group="enableSearchEngine"
                            )
                            span(class="toggle-switch")
                                span(class="toggle-switch__track")
                                span(class="toggle-switch__nub")
                            span(class="search-tailor-option__input--toggle__label")= searchEngine.name

                    each searchEngine in searchEngines
                        +searchEngineToggle(searchEngine)

            div(class="search-tailor-option")
                span(class="search-tailor-option__label") JSON Export
                div(class="search-tailor-option__input-wrapper search-tailor-option__input-wrapper--raw-json")
                    textarea(
                        class="search-tailor-option__input search-tailor-option__input--raw-json js-option-input"
                        name="jsonExport"
                        spellcheck="false"
                        readonly
                    )
                div(class="search-tailor-option__action-container")
                    button(class="search-tailor-option__action" data-click-action="copyJSON") Copy

            form(class="search-tailor-option")
                span(class="search-tailor-option__label") JSON Import
                div(class="search-tailor-option__input-wrapper search-tailor-option__input-wrapper--raw-json" data-validation-message="")
                    textarea(
                        class="search-tailor-option__input search-tailor-option__input--raw-json js-option-input"
                        name="jsonImport"
                        spellcheck="false"
                    )
                div(class="search-tailor-option__action-container")
                    button(type="button" class="search-tailor-option__action" data-click-action="clearJSON") Clear
                    button(type="button" class="search-tailor-option__action" data-click-action="importJSON") Import
        
        script(src="../scripts/addonData.js")
        script(src="../scripts/options.js")